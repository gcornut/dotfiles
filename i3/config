# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
set $p 5
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width $p px or $p ppt
        bindsym k resize grow height $p px or $p ppt
        bindsym l resize shrink height $p px or $p ppt
        bindsym m resize grow width $p px or $p ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width $p px or $p ppt
        bindsym Down resize grow height $p px or $p ppt
        bindsym Up resize shrink height $p px or $p ppt
        bindsym Right resize grow width $p px or $p ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
set $bg-color  #222222
set $bar-bg-color  #000000
set $bg-text   #999999
set $fg-color  #505050
set $fg-text   #DDDDDD
set $fg-border #606060

bar {
  #status_command i3status -c ~/.i3/status.conf
  mode hide
  #i3bar_command i3bar -t
  colors {
    statusline $bg-text
    background $bar-bg-color
    focused_workspace  $fg-border $fg-color $fg-text
    inactive_workspace $bg-color  $bg-color  $bg-text
  }
  position top
  tray_output none
  height 24
  strip_workspace_numbers yes
}

# class                 border     backgr.   text     indicator  child_border
client.unfocused        $bg-color  $bg-color $bg-text $bg-color
client.focused_inactive $bg-color  $bg-color $fg-text $fg-color
client.focused          $fg-border $fg-color $fg-text $fg-color

new_window pixel 3
hide_edge_borders none
gaps inner 5
smart_borders on
smart_gaps on

