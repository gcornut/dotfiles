# Workstation config


# Init i3lock autolock
# exec --no-startup-id xautolock -time 5 -locker i3lock-fancy -g

# Init dual screen
exec --no-startup-id xrandr --output HDMI2 --auto --left-of VGA1
workspace $ws1 output HDMI2
workspace $ws2 output HDMI2
workspace $ws3 output VGA1
workspace $ws4 output VGA1
workspace $ws5 output VGA1

# Restore nitrogen wallpaper
exec --no-startup-id nitrogen --restore

# Start compton compositor
exec_always --no-startup-id compton --config ~/.config/i3/compton.conf

# Start two terminals
exec i3-sensible-terminal
exec i3-sensible-terminal
